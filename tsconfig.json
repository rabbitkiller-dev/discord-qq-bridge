{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  // 此配置生效范围
  "include": [
    "src/**/*"
  ]
}
